<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GreenBox.Resources">

    <Style x:Key="LoginBackground" TargetType="Border">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="CustomMessageBoxBackground" TargetType="Border">
        <Setter Property="Background" Value="#F0F0F0" />
    </Style>

    <Style x:Key="FontColor" TargetType="Window">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="FontPageColor" TargetType="Page">
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="StackBackground" TargetType="StackPanel">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="HomeStackBackground" TargetType="StackPanel">
        <Setter Property="Background" Value="#E2E2E2" />
    </Style>


    <Style x:Key="GridBackground" TargetType="Grid">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="GridPageBackground" TargetType="Grid">
        <Setter Property="Background" Value="#F3F3F3" />
    </Style>

</ResourceDictionary>