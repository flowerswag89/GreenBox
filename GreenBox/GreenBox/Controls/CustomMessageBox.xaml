<Window x:Class="GreenBox.Controls.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenBox.Controls"
        mc:Ignorable="d"
        Title="CustomCustomMessageBox" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True" Height="185" Width="300">
    <Grid>
        <Border Style="{StaticResource CustomMessageBoxBackground}" CornerRadius="10"/>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" FontFamily="Arial" FontSize='19' x:Name="TextContainer" Height="100" Margin="30 20 30 0"></TextBlock>
            <Button Click="Button_Click" Height="44" Content="Ok" FontSize="20" Margin="30 10 30 5" Style="{DynamicResource RoundButtonTemplate}"></Button>
        </StackPanel>
    </Grid>
</Window>
